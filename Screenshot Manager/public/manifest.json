{
  "name": "ScreenShot Manager",
  "version": "1.9",
  "description": "Take screenshots and store them in local memory. Download them automatically or at a later date.",
  "background": {
    "service_worker": "background.js",
    "type": "module" 
  },
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "camera16.png",
    "48": "camera48.png",
    "128": "camera128.png"
  },
  "action": {
    "default_icon": "camera16.png",
    "default_title": "Shoot!"
  },
  "permissions": [
    "tabs", "activeTab", "downloads", "storage", "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["cam.mp3"],
      "matches": ["<all_urls>"]
    }
  ],
  "manifest_version": 3
}
